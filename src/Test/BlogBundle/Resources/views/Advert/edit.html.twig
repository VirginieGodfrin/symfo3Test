{% extends "TestBlogBundle::layout.html.twig" %}

{% block title %}
  Modifier une annonce - {{ parent() }}
{% endblock %}

{% block blog_body %}

  <h2>Modifier une annonce</h2>

  {{ include("TestBlogBundle:Advert:form.html.twig") }}

  <div class="col-sm-12">
    <p>Vous éditez une annonce déjà existante, merci de ne pas changer
    l'esprit générale de l'annonce déjà publiée.
    </p>

    <p>
      <a href="{{ path('blog_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
      </a>
    </p>

  </div>

  

{% endblock %}