
{% extends "TestBlogBundle::layout.html.twig" %}

{% block title %} 
  Accueil - {{ parent() }}
{% endblock %}

{% block blog_body %}
  <h2>liste des Annonces</h2>
  <ul>
    {% for advert in listAdverts %}

      <li>
        <a href="{{ path('blog_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        <p>par {{ advert.author }},le {{ advert.date|date('d/m/Y') }}</p>
      </li>

    {% else %}

      <li>Pas (encore !) d'annonces</li>

    {% endfor %}

  </ul>

{% endblock %}