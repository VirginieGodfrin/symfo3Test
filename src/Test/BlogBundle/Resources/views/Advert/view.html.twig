{% extends "TestBlogBundle::layout.html.twig" %}

{% block title %}
  lecture d'une annonce - {{ parent() }}
 {% endblock %} 

 {% block blog_body %}

    <div>
      <h2> {{ advert.title }}</h2>
        <p> Image</p>
      {% if advert.image is not null %}
          <img src="{{ asset(advert.image.webPath) }}" alt="{{ advert.image.alt }}" />
      {% endif %} 
      
      <p><i> Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i></p>

      <p> {{ advert.content }} </p>

    </div>

    {% if not advert.categories.empty %}
        <p>
          Cette annonce est parue dans les catégories suivantes :
            {% for category in advert.categories %}
              {{ category.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
    {% endif %}

    {% if listAdvertSkills|length > 0 %}
        <div>
          Cette annonce requiert les compétences suivantes :
          <ul>
            {% for advertSkill in listAdvertSkills %}
              <li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
            {% endfor %}
          </ul>
        </div>
    {% endif %}

    <p>
      <a href="{{ path('blog_home') }}" class="btn btn-default">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Retour à la liste
      </a>
      <a href="{{ path('blog_edit', {'id': advert.id}) }}" class="btn btn-default">
        <i class="glyphicon glyphicon-edit"></i>
        Modifier l'annonce
      </a>
      <a href="{{ path('blog_delete', {'id': advert.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i>
        Supprimer l'annonce
      </a>
    </p>

    <div>
      {# On affiche tous les messages flash dont le nom est « info » #}
      {% for message in app.session.flashbag.get('info') %}
        <p>Message flash : {{ message }}</p>
      {% endfor %}
    </div>

    
  {% endblock %}


  

  


      

